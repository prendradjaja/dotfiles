#!/usr/bin/env python3

import sys
import os

if len(sys.argv) < 2:
    print('Usage: myrun PATH_TO_PROGRAM [ARGS...]')
    exit()

program, *args = sys.argv[1:]

if program.endswith('.js'):
    command = ['node']
# elif program.endswith('.ts'):
#     command = ['ts-node', '--transpileOnly']
elif program.endswith('.py'):
    command = ['python3']
else:
    print('Language not supported')
    exit()

command = command + [program] + args

os.system(' '.join(command))
